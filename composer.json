{
	"name": "sabservis/api",
	"type": "library",
	"autoload": {
		"psr-4": {
			"Sabservis\\Api\\": "src/",
			"Tests\\": "tests/"
		}
	},
	"minimum-stability": "stable",
	"require": {
		"php": ">= 8.1",
		"ext-fileinfo": "*",
		"ext-mbstring": "*",
		"nette/di": "^3.2",
		"symfony/cache": "^6.4",
		"igorpocta/data-mapper": "^1.3",
		"psr/simple-cache": "^3.0",
		"tracy/tracy": "^2.10"
	},
	"require-dev": {
		"phpstan/phpstan": "^1.12",
		"slevomat/coding-standard": "^8.27",
		"phpunit/phpunit": "^10.5"
	},
	"scripts": {
		"test": "vendor/bin/phpunit",
		"test:coverage": "vendor/bin/phpunit --coverage-clover build/coverage.xml",
		"test:coverage:check": [
			"@test:coverage",
			"php tools/check-coverage.php build/coverage.xml 60"
		]
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
